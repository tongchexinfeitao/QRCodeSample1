<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.QRCodeActivity">


    <TextView
        android:id="@+id/tv_qr_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="15501186623" />

    <Button
        android:id="@+id/btn_qr_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_qr_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="扫一扫" />

    <Button
        android:id="@+id/btn_qr_open_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_qr_scan"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="识别相册中的二维码" />

    <ImageView
        android:id="@+id/iv_qr_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_qr_open_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp" />


</RelativeLayout>