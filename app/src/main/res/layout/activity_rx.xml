<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.QRCodeActivity">

    <Button
        android:id="@+id/btn_get_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="用rxjava请求" />

    <Button
        android:id="@+id/btn_get_Async"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_get_sync"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="get异步请求" />


    <Button
        android:id="@+id/btn_post_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_get_Async"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="post同步请求" />

    <Button
        android:id="@+id/btn_post_Async"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_post_sync"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="post异步请求" />

</RelativeLayout>